<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Aşı Takip Sistemi</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div id="header"></div>
    <div id="yanMenu">
        <ul class="yanMenuListe">
            <li style="padding-left: 62px;">Menü</li>
            <li>@Html.ActionLink("Ana Sayfa", "Index", "Home")</li>
            <li>@Html.ActionLink("Hastalar", "Index", "Hastalar")</li>
            <li>@Html.ActionLink("Enjeksiyon Kayıt", "Index", "AsiYap")</li>
            <li>@Html.ActionLink("Aşılar", "Index", "Asilar")</li>
            <li>@Html.ActionLink("Aşı Stok İşlemleri", "Index", "AsiStok")</li>
            <li>@Html.ActionLink("Roller", "Index", "Role")</li>
        </ul>
    </div>

    @RenderBody()

    <div id="footer">(c)2017. Aşı Takip Sistemi. || 
    
    
    @using Microsoft.AspNet.Identity
    @if (Request.IsAuthenticated)
    {
        @Html.ActionLink("Hoşgeldiniz, " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
        {
            @Html.AntiForgeryToken()
            <a href="javascript:document.getElementById('logoutForm').submit()">Çıkış Yap</a>
        }
    }
    else
    {  @Html.ActionLink("Giriş Yap", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })}



    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>