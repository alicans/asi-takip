@model MVC_Son.Models.Hastalar

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Hasta Ekle</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form">
       
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.TCNO, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TCNO, new { htmlAttributes = new { @class = "form-control", @Required="", @Placeholder="TC Kimlik Numarası" } })
                @Html.ValidationMessageFor(model => model.TCNO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HastaAdi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.HastaAdi, new { htmlAttributes = new { @class = "form-control", @Required = "", @Placeholder = "Hasta Adı" } })
                @Html.ValidationMessageFor(model => model.HastaAdi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HastaSoyadi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.HastaSoyadi, new { htmlAttributes = new { @class = "form-control", @Required = "", @Placeholder = "Hasta Soyadı" } })
                @Html.ValidationMessageFor(model => model.HastaSoyadi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HastaDtar, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.HastaDtar, "{0:dd/MM/yyyy}", new { htmlAttributes = new { @class = "form-control", @Required = "" } })
                @Html.ValidationMessageFor(model => model.HastaDtar, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HastaBoy, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.HastaBoy, new { htmlAttributes = new { @class = "form-control", @Required = "", @Placeholder = "Boyu" } })
                @Html.ValidationMessageFor(model => model.HastaBoy, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HastaKilo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.HastaKilo, new { htmlAttributes = new { @class = "form-control", @Required = "", @Placeholder = "Kilosu" } })
                @Html.ValidationMessageFor(model => model.HastaKilo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Hasta Kaydet" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Geri Dön", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
